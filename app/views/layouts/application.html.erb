          <li><%= link_to 'Your Cart',  %></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="container-fluid">

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
