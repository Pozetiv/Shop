<%= form_for(@product) do |f| %>
    <div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :price, "Price" %>
      <%= f.number_field :price, class: 'form-control'%>
    </div>

    <%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
