<% if @order_items.any?%>
	<% order_items.each do |item|%>
	<p><%= item.product.title%> | <%= link_to "Delete", order_item_path, method: :delete, data: {confirm: "You sure?"} %></p>
	<p>Unit Price: <%= number_to_curency item.product.price%> | Quantity: <%= item.quantity%> | Total price: <%= number_to_curency (item.product.price * item.quantity) %></p>
	<% end%>
	<p>Your Total: <%= number_to_curency.current_order.total_price%></p>
	<% else %>
	<p>Your shopping cart is empty</p>
	<% end%>