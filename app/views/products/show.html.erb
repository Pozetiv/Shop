<% provide(:title, "#{@product.title}") %>
<h2 class="text-center"><%= @product.title %></h2>

<%= link_to(image_tag @product.image.url(:large), class: "img-show" if @product.image?, product_path)  %>

  <h4>description</h4> </br>
<%= @product.description %></br>

Price the <%= @product.title %> -> <%= @product.price %> $
</br>
<% if current_user.admin %>
<%= link_to  "Edit #{@product.title}", edit_product_path %>
    <%= link_to "DELETE #{@product.title}", product_path, method: :delete  %>
<% end %>