<h2>Products list</h2>
<% @categories.each do |cat| %>
    <h3 class="text-center"><%= cat.name %></h3>
    <%cat.products.each do |product| %>
        <div class="col-md-4">
          <%= image_tag product.image.url(:thumb), class: 'img-thumbnail' if product.image? %>
          <%= link_to product.title, product_path(product) %></br>
          <%= link_to "Edit", edit_product_path(product), class: "btn btn-info bnt-sm" %>

        </div>
        <% end %>
    </br>



<% end %>

