<!DOCTYPE html>
<html>
<head>
  <title>Task</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div class="navbar navbar-inverse navbar-fixet-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Logo", "/", class: "navbar-brand"  %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav pull-right">

      <% if logged_in? %>
            <% if current_user.admin %>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin menu <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to "List items", products_path %></li>
                    <li><%=link_to "Creat new item", new_product_path %></li>
                    <li><%=link_to "List users", users_path %></li>
                    <li>list orders</li>
                  </ul>
                </li>
            <% end %>
            <li><%= link_to "Cart", cart_path, class: "glyphicon glyphicon-shopping-cart" %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Edite profile", edit_user_path(current_user) %></li>
              <li class="divider"></li>
        <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
            </li>
            <% else %>
            <li><%= link_to "Sign IN", signin_path %></li>
            <li><%= link_to "Sign UP", signup_path %></li>
            <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container-fluid">

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
<% flash.each do |msg_type, msg| %>
      <div class="alert alert-<%=msg_type %>"><%= msg %></div>
      <% end %>
  <%= yield %>
  <%= debug(params) if Rails.env.development? %>


</div>
</body>
</html>
